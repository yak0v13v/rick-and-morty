{
  "name": "rick-and-morty",
  "packageManager": "yarn@4.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "yarn workspace web dev",
    "storybook": "yarn workspace storybook storybook",
    "lint:all": "yarn workspaces foreach -A -p run lint",
    "lint-styles:all": "yarn workspaces foreach -A -p run lint-styles",
    "type-check:all": "yarn workspaces foreach -A -p run type-check"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "6.20.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8",
    "eslint-config-next": "14.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-perfectionist": "2.5.0",
    "eslint-plugin-react-hooks": "4.6.0",
    "stylelint": "16.2.1",
    "stylelint-config-recess-order": "4.4.0",
    "stylelint-config-standard": "36.0.0",
    "stylelint-order": "6.0.4",
    "stylelint-scss": "6.1.0",
    "typescript": "^5"
  }
}
